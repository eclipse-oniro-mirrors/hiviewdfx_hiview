import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/test.gni")

module_output_path = "hiview/hiview"

group("unittest") {
  testonly = true
  deps = [
    ":AdapterLoglibraryAbilityTest",
    ":AdapterLoglibraryIdlTest",
    ":HiviewSATest",
  ]
}

config("unittest_config") {
  include_dirs = [
    "//third_party/bounds_checking_function/include",
    "unittest/common",
    "$hiview_adapter/service/idl/include",
    "$hiview_interfaces/inner_api/unified_collection",
    "$hiview_service",
  ]

  cflags_cc = [ "-D__UNITTEST__" ]
}

ohos_unittest("HiviewSATest") {
  module_out_path = module_output_path
  configs = [ ":unittest_config" ]

  sources = [ "unittest/common/hiview_sa_test.cpp" ]

  cflags_cc = [ "-DTEST_LOCAL_SRC" ]

  deps = [
    "$hiview_adapter/service/idl:hiview_service_impl_for_js",
    "$hiview_base:hiview_base",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "hilog:libhilog",
    "ipc:ipc_single",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]
}

ohos_unittest("AdapterLoglibraryIdlTest") {
  module_out_path = module_output_path
  configs = [ ":unittest_config" ]

  sources = [
    "unittest/common/adapter_loglibrary_idl_test.cpp",
    "unittest/common/adapter_loglibrary_test_tools.cpp",
  ]

  cflags_cc = [ "-DTEST_LOCAL_SRC" ]

  deps = [
    "$hiview_adapter/service/idl:hiview_service_impl_for_js",
    "$hiview_base:hiview_base",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "access_token:libaccesstoken_sdk",
    "access_token:libnativetoken",
    "access_token:libtoken_setproc",
    "hilog:libhilog",
    "ipc:ipc_single",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]
}

ohos_unittest("AdapterLoglibraryAbilityTest") {
  module_out_path = module_output_path
  configs = [ ":unittest_config" ]

  sources = [
    "unittest/common/adapter_loglibrary_ability_test.cpp",
    "unittest/common/adapter_loglibrary_test_tools.cpp",
  ]

  cflags_cc = [ "-DTEST_LOCAL_SRC" ]

  deps = [
    "$hiview_base:hiview_base",
    "$hiview_service:hiview_service",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "access_token:libaccesstoken_sdk",
    "access_token:libnativetoken",
    "access_token:libtoken_setproc",
    "hilog:libhilog",
    "ipc:ipc_single",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]
}
