import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/ohos.gni")

config("event_threshold_config") {
  visibility = [ "*:*" ]

  include_dirs = [
    "include",
    "$hiview_base/event_threshold/include",
  ]
}

config("event_threshold_private_config") {
  include_dirs = [
    ".",
    "include",
  ]
}

ohos_source_set("event_threshold_source") {
  part_name = "hiview"

  subsystem_name = "hiviewdfx"

  public_configs = [ ":event_threshold_config" ]

  configs = [ ":event_threshold_private_config" ]

  sources = [
    "event_threshold_manager.cpp",
    "sys_event_user.cpp",
  ]

  deps = [
    "$hiview_base:logger",
    "$hiview_base/utility:hiview_utility",
    "//third_party/jsoncpp:jsoncpp",
  ]

  external_deps = [ "hilog:libhilog" ]
}
