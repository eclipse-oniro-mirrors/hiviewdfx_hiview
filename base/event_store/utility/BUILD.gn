import("//build/ohos.gni")
import("//base/hiviewdfx/hiview/hiview.gni")

config("event_store_utility_config") {
  visibility = [ "*:*" ]

  include_dirs = [
    "$hiview_adapter/utility/include",
    "$hiview_base/event_store/include",
    "$hiview_base/utility/include",
    "$hiview_base/include",
    "$hiview_root/include",
    "crc/include",
    "reader/include",
    "writer/include",
  ]
}

ohos_source_set("event_store_utility_source") {
  public_configs = [ ":event_store_utility_config" ]

  sources = [
    "crc/crc_generator.cpp",
    "reader/sys_event_doc_reader.cpp",
    "writer/sys_event_doc_writer.cpp",
  ]

  deps = [
    "//third_party/jsoncpp:jsoncpp",
    "../config:event_store_config_source",
  ]

  public_deps = [ "$hiview_base/event_raw:hiview_event_raw_encode" ]

  external_deps = [
    "c_utils:utils",
    "hilog_native:libhilog",
  ]
}
