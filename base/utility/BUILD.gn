import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/ohos.gni")

config("hiview_utils_config") {
  visibility = [ "*:*" ]

  include_dirs = [
    ".",
    "include",
  ]
}

ohos_source_set("hiview_utility") {
  public_configs = [ ":hiview_utils_config" ]

  sources = [
    "ash_memory_utils.cpp",
    "cjson_util.cpp",
    "common_utils.cpp",
    "dynamic_module.cpp",
    "file_util.cpp",
    "freeze_json_util.cpp",
    "hiview_db_util.cpp",
    "hiview_zip_util.cpp",
    "memory_util.cpp",
    "parameter_ex.cpp",
    "socket_util.cpp",
    "sql_util.cpp",
    "string_util.cpp",
    "thread_util.cpp",
    "time_util.cpp",
  ]

  defines = []
  if (use_musl && use_jemalloc && use_jemalloc_dfx_intf) {
    defines += [ "USE_JEMALLOC_DFX_INTF" ]
  }

  deps = [ "$hiview_base:logger" ]

  external_deps = [
    "cJSON:cjson",
    "c_utils:utils",
    "hilog:libhilog",
    "init:libbeget_proxy",
    "init:libbegetutil",
    "zlib:libz",
  ]

  part_name = "hiview"
}
