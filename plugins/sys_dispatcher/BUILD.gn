import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/ohos.gni")

config("sys_dispatcher_config") {
  visibility = [ "*:*" ]
  include_dirs = [ "include" ]
  cflags_cc = [ "-D__HIVIEW_OHOS__" ]
}

ohos_source_set("sys_dispatcher") {
  branch_protector_ret = "pac_ret"
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    cfi_vcall_icall_only = true
    debug = false
  }

  configs = [ ":sys_dispatcher_config" ]

  sources = [ "sys_dispatcher.cpp" ]

  deps = [
    "$hiview_adapter/plugins/eventservice/service:sys_event_service_adapter",
    "$hiview_base:hiviewbase",
  ]

  external_deps = [
    "c_utils:utils",
    "ffrt:libffrt",
    "hilog:libhilog",
    "init:libbegetutil",
    "ipc:ipc_single",
    "jsoncpp:jsoncpp",
    "safwk:system_ability_fwk",
  ]

  part_name = "hiview"
  subsystem_name = "hiviewdfx"
}

group("unittest") {
  testonly = true
  deps = []
}

group("moduletest") {
  testonly = true
  deps = []
}

group("fuzztest") {
  testonly = true
  deps = []
}
