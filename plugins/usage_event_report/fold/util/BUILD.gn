import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/ohos.gni")

config("usage_event_report_util_config") {
  visibility = [ "*:*" ]
  include_dirs = [
    "../cache/include",
    "include",
  ]
}

ohos_shared_library("usage_event_report_util") {
  branch_protector_ret = "pac_ret"
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    cfi_vcall_icall_only = true
    debug = false
  }

  configs = [ ":usage_event_report_util_config" ]

  sources = [ "src/fold_common_utils.cpp" ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_single",
    "window_manager:libdm",
    "window_manager:libwm",
  ]

  version_script = "libusage_event_report_util.map"

  part_name = "hiview"
  subsystem_name = "hiviewdfx"
}
