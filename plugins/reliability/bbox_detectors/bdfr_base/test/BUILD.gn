import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/ohos.gni")
import("//build/test.gni")

module_output_path = "hiview/bbox_detector"

config("bbox_detector_test_config") {
  visibility = [ ":*" ]
  include_dirs = [
    "../",
    "../include",
    "moduletest",
    "mock",
    "unittest",
    "$hiview_root/utility/common_utils/include",
    "$hiview_root/utility/smart_parser",
    "$hiview_plugin/reliability/bbox_detectors/",
    "$hiview_root/utility/smart_parser/feature_analysis/include",
  ]
}

bbox_detector_test_source = [
  "$hiview_plugin/reliability/bbox_detectors/bbox_event_recorder.cpp",
  "$hiview_plugin/reliability/bbox_detectors/test/mock/hisysevent_util_mock.cpp",
  "$hiview_plugin/reliability/bbox_detectors/bdfr_base/bbox_detectors_base.cpp",
  "$hiview_plugin/reliability/bbox_detectors/bdfr_base/panic_report_recovery.cpp",
]

ohos_unittest("BBoxDetectorBaseUnitTest") {
  sources = [ "unittest/bbox_detector_base_unit_test.cpp" ]

  sources += bbox_detector_test_source

  configs = [ ":bbox_detector_test_config" ]

  include_dirs = [ "$hiview_plugin/reliability/bbox_detectors/test/mock/" ]

  cflags_cc = [ "-Dprivate=public" ]
  cflags_cc += [ "-Dprotected=public" ]

  external_deps = [
    "bounds_checking_function:libsec_shared",
    "c_utils:utils",
    "googletest:gmock",
    "googletest:gtest_main",
    "hilog:libhilog",
    "hisysevent:libhisysevent",
    "init:libbegetutil",
    "zlib:shared_libz",
  ]

  cflags = [
    "-DUNITTEST",
    "-Dprivate=public",
  ]

  deps = [
    "$hiview_base:hiviewbase_static_lib_for_tdd",
    "$hiview_base/event_store:event_store_source",
    "$hiview_root/utility/common_utils:hiview_reliability_common_utils",
    "$hiview_root/utility/smart_parser:smart_parser",
  ]

  module_out_path = module_output_path
}
