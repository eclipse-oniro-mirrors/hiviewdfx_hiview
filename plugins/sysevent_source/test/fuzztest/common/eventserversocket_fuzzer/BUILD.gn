import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/config/features.gni")
import("//build/test.gni")

ohos_fuzztest("EventServerSocketFuzzTest") {
  module_out_path = hiview_module

  fuzz_config_file = "../eventserversocket_fuzzer"

  include_dirs = [
    "../../../../include",
    "$hiview_core/include",
    "$hiview_plugin/sysevent_source/control/include",
    "$hiview_plugin/sysevent_source/include",
    "eventserversocket_fuzzer.h",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [ "eventserversocket_fuzzer.cpp" ]

  deps = [
    "$hiview_adapter/plugins/eventservice/service:sys_event_service_adapter",
    "$hiview_base:hiviewbase_static_lib_for_tdd",
    "$hiview_core:hiview_core",
    "$hiview_plugin/sysevent_source:sysevent_source",
  ]

  external_deps = [
    "ffrt:libffrt",
    "hilog:libhilog",
    "init:libbegetutil",
    "jsoncpp:jsoncpp",
  ]
}
