import("//base/hiviewdfx/hiview/build/hiview_var.gni")
import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/test.gni")

module_output_path = "hiview/hiview_freeze_plugin/eventlogger/manager"

config("unittest_config") {
  include_dirs = [
    "../include",
    "../../test/util",
    "unittest/",
  ]

  cflags_cc = [
    "-D__UNITTEST__",
    "-D__HIVIEW_OHOS__",
  ]
}

ohos_unittest("EventloggerManagerTest") {
  module_out_path = module_output_path
  configs = [ ":unittest_config" ]

  include_dirs = [
    "include",
    "$hiview_eventlogger/include",
  ]

  sources = [ 
    "../../test/util/eventlogger_util_test.cpp",
    "unittest/event_cache_trace_test.cpp",
  ]

  deps = [
    "$hiview_base:hiviewbase_static_lib_for_tdd",
    "$hiview_eventlogger:eventlogger",
  ]

  external_deps = [
    "googletest:gtest_main",
    "c_utils:utils",
    "hilog:libhilog",
  ]

  defines = []
  if (hiview_eventlogger_hitrace_catcher_enable) {
    defines += [ "HITRACE_CATCHER_ENABLE" ]
  }
}
