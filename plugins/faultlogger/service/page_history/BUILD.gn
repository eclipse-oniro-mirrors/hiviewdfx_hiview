import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/ohos.gni")

ohos_source_set("page_history_with_cfi") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    cfi_vcall_icall_only = true
    debug = false
  }
  part_name = "hiview"
  subsystem_name = "hiviewdfx"
  include_dirs = [
    ".",
    "$hiview_plugin/faultlogger/common",
  ]

  sources = [
    "page_history_manager.cpp",
    "page_history_recorder.cpp",
    "pages_trace.cpp",
  ]

  deps = [ "$hiview_base:hiviewbase" ]

  external_deps = [
    "hilog:libhilog",
    "c_utils:utils",
  ]
}
