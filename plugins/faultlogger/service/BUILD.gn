import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/ohos.gni")

config("bdfr_public_include") {
  visibility = [ "*:*" ]

  include_dirs = [
    "extension_manager/include",
    "dynamic_library_management/include",
    "page_history",
  ]
}

ohos_source_set("faultlogger_service_with_cfi") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    cfi_vcall_icall_only = true
    debug = false
  }
  part_name = "hiview"
  subsystem_name = "hiviewdfx"
  public_configs = [ ":bdfr_public_include" ]
  configs = [ "bdfr_base:bdfr_base_public_include" ]

  include_dirs = [
    ".",
    "$hiview_framework/native/unified_collection/process/include",
  ]

  sources = [
    "dynamic_library_management/dynamic_library_handle.cpp",
    "dynamic_library_management/dynamic_library_manager.cpp",
    "extension_manager/src/faultlog_ext_conn_manager.cpp",
    "extension_manager/src/faultlog_ext_connection.cpp",
    "faultlog_bootscan_listener.cpp",
    "faultlogger.cpp",
  ]

  deps = [
    "$hiview_base:hiviewbase",
    "$hiview_interfaces/inner_api/unified_collection/utility:libucollection_utility",
    "$hiview_plugin/faultlogger/framework/native/extension/zidl:faultlog_ext_zidl_proxy",
    "idl:faultlogger_service_impl_with_cfi",
    "page_history:page_history_with_cfi",
    "bdfr_base:export_bdfr_base",
  ]

  external_deps = [
    "ability_base:want",
    "ability_runtime:ability_connect_callback_stub",
    "ability_runtime:ability_manager",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "ffrt:libffrt",
    "hilog:libhilog",
    "ipc:ipc_single",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]
}

