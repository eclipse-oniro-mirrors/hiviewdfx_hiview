  ]

  public_configs = [ ":faultlogger_service_impl_config" ]

  deps = [ "$hiview_base:hiviewbase" ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_single",
    "jsoncpp:jsoncpp",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
