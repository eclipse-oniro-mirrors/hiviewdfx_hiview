import("//build/config/components/ets_frontend/ets2abc_config.gni")
import("//build/ohos.gni")
import("//build/ohos/ace/ace.gni")

generate_static_abc("faultlog_extension_ability_ani_abc") {
  base_url = "./ets"
  files = [
    "./ets/@ohos.hiviewdfx.FaultLogExtensionAbility.ets",
    "./ets/@ohos.hiviewdfx.FaultLogExtensionContext.ets",
  ]

  dst_file = "$target_out_dir/faultlog_extension_ability_ani.abc"
  out_puts = [ "$target_out_dir/faultlog_extension_ability_ani.abc" ]

  is_boot_abc = "True"
  device_dst_file = "/system/framework/faultlog_extension_ability_ani.abc"
}

ohos_prebuilt_etc("faultlog_extension_ability_ani_etc") {
  source = "$target_out_dir/faultlog_extension_ability_ani.abc"
  module_install_dir = "framework"
  subsystem_name = "hiviewdfx"
  part_name = "hiview"
  deps = [ ":faultlog_extension_ability_ani_abc" ]
}
