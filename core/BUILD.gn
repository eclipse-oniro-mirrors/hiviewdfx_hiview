import("//base/hiviewdfx/hiview/hiview.gni")
import("//build/ohos.gni")

config("hiview_core_config") {
  visibility = [ "*:*" ]
  include_dirs = [
    "include",
    "param_update/include",
    "$hiview_root/include",
  ]
  cflags_cc = [ "-D__HIVIEW_OHOS__" ]
}

ohos_source_set("hiview_core") {
  part_name = "hiview"
  public_configs = [ ":hiview_core_config" ]
  configs = [ "//third_party/jsoncpp:jsoncpp_public_config" ]

  sources = [
    "event_json_parser.cpp",
    "hiview_platform.cpp",
    "plugin_bundle.cpp",
    "plugin_config.cpp",
  ]

  deps = [
    "$hiview_adapter/plugins/eventservice/service:sys_event_service_adapter",
    "$hiview_base:hiviewbase",
    "param_update:hiview_param_update",
    "platform_config:hiviewplatform_config",
  ]

  external_deps = [
    "ffrt:libffrt",
    "hilog:libhilog",
    "hisysevent:libhisysevent",
    "init:libbeget_proxy",
    "init:libbegetutil",
    "ipc:ipc_single",
  ]
}

group("unittest") {
  testonly = true
  deps = []
}

group("moduletest") {
  testonly = true
  deps = []
}
